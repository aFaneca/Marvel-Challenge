<resources>
    <!-- Base application theme. -->
    <style name="Theme.MarvelChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet_main</item>
        <item name="colorPrimaryVariant">@color/violet_lighter</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red_darker</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:colorBackground">@color/app_color_background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:statusBarColor">@color/app_color_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>