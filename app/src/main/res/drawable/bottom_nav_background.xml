<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <!-- create gradient you want to use with the angle you want to use -->
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:endColor="#FFE70000"
                android:startColor="#FFDC00A3"
                android:type="linear" />

        </shape>
    </item>

    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_color_background" />
        </shape>
    </item>
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bottom_navigation_background" />
        </shape>
    </item>

</layer-list>